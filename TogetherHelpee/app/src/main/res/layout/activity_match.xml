<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MatchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15pt"
            android:text="요청사항"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            android:text="요청 종류: "
            android:id="@+id/txt_type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            android:text="요청 일자: "
            android:id="@+id/txt_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            android:text="요청 시각: "
            android:id="@+id/txt_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            android:text="요청 기타사항: "
            android:id="@+id/txt_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            android:text="요청 봉사시간: "
            android:id="@+id/txt_duration"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="15pt"
            android:textStyle="bold"
            android:text="매칭상태"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11pt"
            android:id="@+id/txt_match_state"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:text="아직 매칭 대기중입니다."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11pt"
            android:textColor="#000000"
            android:id="@+id/txt_match_info"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_cancel"
            android:textSize="15pt"
            android:textStyle="bold"
            android:paddingVertical="10pt"
            android:background="@drawable/button_border1"
            android:text="수락"
            android:visibility="invisible"
            android:id="@+id/btn_accept"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_accept"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15pt"
            android:textStyle="bold"
            android:paddingVertical="10pt"
            android:background="@drawable/button_border2"
            android:text="요청 취소"
            android:id="@+id/btn_cancel"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>