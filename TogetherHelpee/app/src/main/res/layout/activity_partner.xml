<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PartnerActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="900px"
        android:layout_height="1300px"
        android:background="#55000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:paddingHorizontal="10pt"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/text_guide"
            android:textSize="13pt"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="제가 도와드릴게요"/>
        <ImageView
            android:layout_width="470px"
            android:layout_height="550px"
            android:id="@+id/img_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_guide"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:gravity="left"
            android:paddingHorizontal="20pt"
            android:paddingVertical="2pt"
            android:text="이름"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/img_profile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:gravity="left"
            android:paddingHorizontal="20pt"
            android:paddingVertical="2pt"
            android:text="봉사경력"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/txt_career"
            app:layout_constraintTop_toBottomOf="@id/txt_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:gravity="left"
            android:paddingHorizontal="20pt"
            android:paddingVertical="2pt"
            android:text="평점"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/txt_score"
            app:layout_constraintTop_toBottomOf="@id/txt_career"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="네"
            android:textSize="15pt"
            android:textStyle="bold"
            android:paddingVertical="10pt"
            android:background="@drawable/button_border1"
            android:textColor="#000000"
            android:id="@+id/btn_yes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_no"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아니요"
            android:textSize="15pt"
            android:textStyle="bold"
            android:paddingVertical="10pt"
            android:background="@drawable/button_border2"
            android:textColor="#000000"
            android:id="@+id/btn_no"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_yes"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>